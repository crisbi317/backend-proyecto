<div class="container mx-auto p-4">
    <h2 class="text-2xl font-bold mb-4">Agregar Producto (Tiempo Real)</h2>
    <form id="formCrear" class="bg-gray-100 p-6 rounded-lg shadow-md">
        <div class="mb-4">
            <label for="nombre" class="block text-gray-700 font-bold mb-2">Nombre:</label>
            <input type="text" id="nombre" name="nombre" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
        </div>
        <div class="mb-4">
            <label for="precio" class="block text-gray-700 font-bold mb-2">Precio:</label>
            <input type="number" id="precio" name="precio" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
        </div>
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
        Agregar Producto
        </button>
    </form>

    <hr class="my-6 border-t-2 border-gray-300">

    <h2 class="text-2xl font-bold mb-4">Eliminar Producto</h2>
    <form id="formEliminar" class="bg-gray-100 p-6 rounded-lg shadow-md">
        <div class="mb-4">
            <label for="idProducto" class="block text-gray-700 font-bold mb-2">ID del Producto:</label>
            <input type="text" id="idProducto" name="idProducto" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
        </div>
        <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
            Eliminar Producto
        </button>
    </form>

    <hr class="my-6 border-t-2 border-gray-300">

    <h2 class="text-2xl font-bold mb-4">Lista de Productos</h2>
    <ul id="listaProductos" class="list-disc pl-5">
        <!-- renderiza productos -->
    </ul>

</div>

<!-- Scripts de Socket.IO -->

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.2/socket.io.min.js"></script>

