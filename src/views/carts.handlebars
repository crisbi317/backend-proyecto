<!-- src/views/carts.handlebars -->
<div class="container mx-auto p-6">

    <h1 class="text-3xl font-bold mb-6 text-center">{{titulo}}</h1>

    <!-- Si llega un array de carritos -->
    {{#if carritos}}
        <h2 class="text-2xl font-semibold mb-4">Lista de Carritos</h2>
        {{#each carritos}}
            <div class="mb-4 p-4 border rounded shadow-sm">
                <h3 class="font-semibold">Carrito ID: {{this.id}}</h3>
                <p>Cantidad de productos: {{this.products.length}}</p>
                <a href="/api/carts/{{this.id}}" class="text-blue-600 hover:underline">Ver productos</a>
            </div>
        {{/each}}

    <!-- Si llega un carrito con productos -->
    {{else if products}}
        <h2 class="text-2xl font-semibold mb-4">Productos en el carrito</h2>
        {{#if products.length}}
            <ul class="list-disc pl-5 space-y-2">
                {{#each products}}
                    <li class="bg-white p-3 rounded-md shadow-sm border border-gray-200 flex justify-between items-center">
                        <span>Producto ID: <strong>{{this.id}}</strong></span>
                        <span>Cantidad: <span class="font-bold text-blue-600">{{this.quantity}}</span></span>
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p class="text-gray-500 text-lg">El carrito está vacío.</p>
        {{/if}}

    {{else}}
        <p class="text-gray-500 text-lg">No hay información disponible.</p>
    {{/if}}

</div>

