<!-- src/views/carts.handlebars -->
<div class="container mx-auto p-4">
<h1 class="text-3xl font-bold mb-6 text-center">Detalles del Carrito</h1>

{{#if products}}
<div class="bg-gray-100 p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold mb-4">Productos en tu carrito</h2>
    <ul class="list-disc pl-5 space-y-2">
        {{#each products}}
        <li class="bg-white p-3 rounded-md shadow-sm border border-gray-200 flex justify-between items-center">
            <span>Producto ID: <strong>{{this.id}}</strong></span>
            <span>Cantidad: <span class="font-bold text-blue-600">{{this.quantity}}</span></span>
        </li>
        {{/each}}
    </ul>
</div>
{{else}}
<div class="text-center p-8 bg-gray-100 rounded-lg shadow-md">
    <p class="text-gray-500 text-lg">Tu carrito está vacío.</p>
</div>
{{/if}}
</div>

